<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBlazorApp1.NativePages.InfoPage"
             Title="InfoPage"
             BackgroundColor="White"
             >
    <VerticalStackLayout>
        <Button 
                Text="Show Alert"
                FontAttributes="Bold"
                Grid.Row="3"
                Clicked="ShowAlert"
                HorizontalOptions="Center" />

        <Button 
                Text="Show Action Shet"
                FontAttributes="Bold"
                Grid.Row="3"
                Clicked="ShowActionSheet"
                HorizontalOptions="Center" />

        <Button 
                Text="Show Prompt"
                FontAttributes="Bold"
                Grid.Row="3"
                Clicked="ShowPrompt"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>